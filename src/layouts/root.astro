---
import { Layout } from "@olinfo/react-components";

interface Props {
    title: string;
    lang: "it" | "en";
    refresh?: boolean;
}

const { title, lang, refresh } = Astro.props;
---

<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        {refresh && <meta http-equiv="refresh" content="60" />}
        <title>{title}</title>
    </head>
    <body>
    <Layout>
        <div class="mx-auto flex items-center w-full max-w-screen-xl grow flex-col p-8 text-center">
            <slot />
        </div>
    </Layout>
    </body>
</html>
